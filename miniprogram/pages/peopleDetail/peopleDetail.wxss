.table {
  display: table;
  margin: 0 auto;
  width: 100%;
  border-collapse: collapse;
  padding: 0;
}

.table-tr {
  display: table-row;
  height: 30rpx;
  margin: 0 auto;
  padding: 0;
}

.table-th {
  margin: 0 auto;
  display: table-cell;
  font-weight:normal;
  height: 100%;
  border: 3rpx solid gray;
  text-align: center;
  vertical-align: middle;
  background-color: #99CCCC;
  padding: 0;
  min-width: 100rpx;
}

.table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
}

.sub-table {
  padding: 0;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  display: table;
}

.sub-table-tr {
  padding: 0;
  margin: 0 auto;
  display: table-row;
  height: 100%;
}

.sub-table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
  border: 3px solid greenyellow;
  text-align: center;
  vertical-align: middle;
}
