.table {
  display: table;
  margin: 0 auto;
  width: 100%;
  border-collapse: collapse;
  padding: 0;
}

.table-tr {
  display: table-row;
  height: 30rpx;
  margin: 0 auto;
  padding: 0;
}

.table-th {
  margin: 0 auto;
  display: table-cell;
  font-weight:normal;
  height: 100%;
  border: 3rpx solid gray;
  text-align: center;
  vertical-align: middle;
  background-color: #e5e5e5;
  padding: 0;
}

.table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
}

.sub-table {
  padding: 0;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  display: table;
}

.sub-table-tr {
  padding: 0;
  margin: 0 auto;
  display: table-row;
  height: 100%;
}

.sub-table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
  border: 3px solid greenyellow;
  text-align: center;
  vertical-align: middle;
}
.unit_box{
    display: flex;
    width: 750rpx;
    flex-flow: wrap;
}
.button_box{
    width: 200rpx;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items:center;
}
.choose_button{
    border-width:3rpx;
  border-color:black;
  background: initial;
  
}
.empty_box{
    width: 250rpx;
    height: 120rpx;
}
.text_box{
    width: 300rpx;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items:center;

}
.empty_area{
margin: 0 auto;
width: 750rpx;
height: 5rpx;
background-color:white;
}

.item_box{
  display: flex;
  height: 120rpx;
  width: 100%;
}
.item_image{
  width: 120rpx;
  height: 120rpx;
}
.item_text{
  text-align: center;
  line-height:120rpx;
}
