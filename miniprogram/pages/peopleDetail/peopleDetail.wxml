<view class="top_table">
    <view class="top_box">
        <image src="{{icon}}" class="icon_img"></image>
        <text>点击查看大图</text>
    </view>
    <view class="table1">
        <view class="table-tr">
            <view class="table-td">
                姓名
            </view>
            <view class="table-td">年</view>

        </view>
        <view class="table-tr">
            <view class="table-td">标签</view>
            <view class="table-td">37010</view>
        </view>
        <view class="table-tr">
            <view class="table-td">职业</view>
            <view class="table-td">70116</view>
        </view>
        <view class="table-tr">
            <view class="table-td">星级</view>
            <view class="table-td">6</view>
        </view>
    </view>

    <view class="unit_box">
        <view class="text_box">
            <text>天赋</text>
        </view>
        <view class="empty_box"></view>
        <view class="button_box">
            <button class="choose_button" size="mini" bindtap="touchTalentImage">{{talentButton}}</button>
        </view>
    </view>

    <view class="empty_area"></view>
    <view class="line"></view>
    <view class="empty_area"></view>

    <view class="table" wx:if="{{talentState}}">
        <view class="table-tr">
            <view class="table-td">天赋名称 </view>
            <view class="table-td">开放条件</view>
            <view class="table-td">效果</view>
        </view>
        <view class="table-tr" wx:for="{{talentList}}">
            <view class="table-td">{{item.name}}</view>
            <view class="table-td">{{item.quire}}</view>
            <view class="table-td">{{item.desc}}</view>
        </view>
    </view>

    <view class="empty_area"></view>
    <view class="line"></view>
    <view class="empty_area"></view>

    <view class="unit_box">
        <view class="text_box">
            <text>技能信息</text>
        </view>
        <view class="empty_box"></view>
        <view class="button_box">
            <button class="choose_button" size="mini" bindtap="touchTalentImage">{{talentButton}}</button>
        </view>
    </view>

    <view class="unit_box">
        <view class="text_box">
            <text>属性</text>
        </view>
        <view class="empty_box"></view>
        <view class="button_box">
            <button class="choose_button" size="mini" bindtap="touchBaseInfo">{{baseInfoButton}}</button>
        </view>
    </view>

    <view class="table">
        <view class="table-tr">
            <view class="table-td">名称</view>
            <view class="table-td">{{skillList[0][0].name}}</view>
            <view class="table-td">{{skillList[0][0].skillType+skillList[0][0].spType}}</view>
        </view>
    </view>


    <scroll-view class="scroll-view_H" scroll-x="true" wx:if="{{baseInfoState}}">
        <view class="table">
            <view class="table-tr">
                <view class="table-td"> </view>
                <view class="table-td" wx:for="{{baseInfoList}}">{{item.level}}</view>
            </view>
            <view class="table-tr">
                <view class="table-td">生命上限</view>
                <view class="table-td" wx:for="{{baseInfoList}}">{{item.maxHp}}</view>
            </view>
            <view class="table-tr">
                <view class="table-td">攻击</view>
                <view class="table-td" wx:for="{{baseInfoList}}">{{item.atk}}</view>
            </view>
            <view class="table-tr">
                <view class="table-td">防御</view>
                <view class="table-td" wx:for="{{baseInfoList}}">{{item.def}}</view>
            </view>
            <view class="table-tr">
                <view class="table-td">法术抗性</view>
                <view class="table-td" wx:for="{{baseInfoList}}">{{item.magicResistance}}</view>
            </view>
        </view>
    </scroll-view>
</view>