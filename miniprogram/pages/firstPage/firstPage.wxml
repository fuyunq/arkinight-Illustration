
<view class="container_rule">

<view class="choose_button_box">
<button class="choose_button" wx:for="{{classList}}" data-name="{{item}}" bindtap="chooseClass">{{item}}</button>
</view>
<view wx:for="{{array}}" wx:key="cn" class="unit_container" bindtap="touchPeople" data-item = "{{item}}" data-name="{{item.cn}}"data-icon="{{item.icon}}">
<image src="{{item.icon}}" class="icon_img"></image>
<text>{{item.cn}}</text>
</view>
</view>
