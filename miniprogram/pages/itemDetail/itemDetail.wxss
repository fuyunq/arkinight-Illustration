.line {
  margin: 0 auto;
  width: 750rpx;
  height: 3rpx;
  background-color: #d8d8d8;
}

.default_view {
  display: table;
  flex-flow: wrap;
  border-collapse: collapse;
}

.border_css {
  display: table-cell;
  /* margin: 5rpx; */
  border: 1rpx solid red;
  /* outline: red solid 1rpx; */
}

.icon_img {
  width: 180rpx;
  height: 180rpx;
  margin: 0rpx 35rpx 0rpx 35rpx;
  border-radius: 35rpx;
  background-color: #9cc;
}

.table {
  display: table;
  margin: 0 auto;
  width: 100%;
  border-collapse: collapse;
  padding: 0;
}

.table-tr {
  display: table-row;
  height: 30rpx;
  margin: 0 auto;
  padding: 0;
}

.table-th {
  margin: 0 auto;
  display: table-cell;
  font-weight:normal;
  height: 100%;
  border: 3rpx solid gray;
  text-align: center;
  vertical-align: middle;
  background-color: #e5e5e5;
  padding: 0;
}

.table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
}

.sub-table {
  padding: 0;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  display: table;
}

.sub-table-tr {
  padding: 0;
  margin: 0 auto;
  display: table-row;
  height: 100%;
}

.sub-table-td {
  padding: 0;
  margin: 0 auto;
  display: table-cell;
  height: 100%;
  border: 3px solid greenyellow;
  text-align: center;
  vertical-align: middle;
}
